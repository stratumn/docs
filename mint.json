{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Stratumn",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "layout": "sidenav",
  "sidebar": {
    "items": "container"
  },
  "background": {
    "style": "windows"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#4B35D2",
    "light": "#c4ccff",
    "dark": "#3a2aa9",
    "anchors": {
      "from": "#635cf8",
      "to": "#533eed"
    }
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "mailto:info@stratumn.com"
    }
  ],
  "topbarCtaButton": {
    "name": "Go to Trace",
    "url": "https://trace.stratumn.com",
    "type": "link",
    "arrow": true,
    "style": "pill"
  },
  "primaryTab": {
    "name": "API Reference"
  },
  "openapi": "/api-reference/open-api-v1.json",
  "modeToggle": {
    "default": "dark",
    "isHidden": false
  },
  "anchors": [
    {
      "name": "API Reference",
      "openapi": "/api-reference/open-api-v1.json",
      "url": "api-reference/v1",
      "icon": "square-terminal",
      "version": "v1"
    },
    {
      "name": "API Reference",
      "openapi": "/api-reference/open-api-v2.json",
      "url": "api-reference/v2",
      "icon": "square-terminal",
      "version": "v2"
    },
    {
      "name": "Studio",
      "icon": "brush",
      "url": "studio"
    },
    {
      "name": "Configuration",
      "icon": "rocket",
      "url": "configuration"
    }
  ],
  "navigation": [
    {
      "group": "API Documentation",
      "pages": ["api-reference/introduction", "api-reference/create-a-trace"]
    },
    {
      "group": "Workflow configuration",
      "pages": [
        "configuration/introduction",
        {
          "group": "Getting started",
          "icon": "rocket",
          "iconType": "duotone",
          "pages": [
            "configuration/getting-started/introduction",
            "configuration/getting-started/step-1",
            "configuration/getting-started/step-2",
            "configuration/getting-started/specification"
          ]
        },
        "configuration/accounts",
        "configuration/trace",
        {
          "group": "Action",
          "icon": "pen-to-square",
          "pages": [
            "configuration/action/definition",
            "configuration/action/form",
            "configuration/action/effects",
            "configuration/action/notifications"
          ]
        },
        {
          "group": "UI configuration",
          "icon": "sparkles",
          "pages": [
            "configuration/ui/introduction",
            "configuration/ui/widgets",
            "configuration/ui/overview"
          ]
        },
        {
          "group": "Table",
          "icon": "table-cells-large",
          "pages": [
            "configuration/table/configuration",
            "configuration/table/read-views",
            "configuration/table/edit-views",
            "configuration/table/wrappers"
          ]
        },
        "configuration/project-structure"
      ]
    },
    {
      "group": "Studio",
      "pages": [
        "studio/introduction",
        {
          "group": "BPMN",
          "pages": [
            "studio/bpmn/introduction",
            "studio/bpmn/resume",
            "studio/bpmn/participants",
            "studio/bpmn/task",
            "studio/bpmn/gateway",
            "studio/bpmn/event"
          ]
        }
      ]
    }
  ],
  "versions": ["v2", "v1"],
  "theme": "venus",
  "footerSocials": {
    "github": "https://github.com/stratumn",
    "website": "https://trace.stratumn.com"
  }
}
